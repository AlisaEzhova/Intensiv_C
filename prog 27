//Задание 27
#include <iostream>
#include <cmath>
using namespace std;

int main() {
    double r1, r2, area;

    cout << "Введите внешний радиус кольца: ";
    cin >> r1;

    cout << "Введите внутренний радиус кольца: ";
    cin >> r2;

    area = M_PI * (r1 * r1 - r2 * r2); // вычисляем площадь кольца

    cout << "Площадь кольца: " << area << endl;

    return 0;
}
