//Задание 33
#include <iostream>
#include <cmath>
using namespace std;

int main() {
    double a, b, perimeter, diagonal;
    cout << "Введите длину первой стороны: ";
    cin >> a;
    cout << "Введите длину второй стороны: ";
    cin >> b;
    perimeter = 2 * (a + b);
    diagonal = sqrt(pow(a, 2) + pow(b, 2));
    cout << "Периметр прямоугольника равен " << perimeter << endl;
    cout << "Длина диагонали прямоугольника равна " << diagonal << endl;
    return 0;
}
