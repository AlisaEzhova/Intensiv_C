//Задание 15, а)
#include <iostream>
#include <cmath>

using namespace std;

int main() {
    double a, x;
    cout << "Введите значение a: ";
    cin >> a;
    x = sqrt(2 * a + sin(abs(3 * a))) / sqrt(3.56);
    cout << "Значение x: " << x << endl;
    return 0;
}

//Задание 15, б)
#include <iostream>
#include <cmath>

using namespace std;

int main() {
    double x, y;
    cout << "Введите значение x: ";
    cin >> x;
    y = sin(3.2) + sqrt(1 + x) / abs(5 * x);
    cout << "Значение y: " << y << endl;
    return 0;
}
