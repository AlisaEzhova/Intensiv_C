//Задание 40
#include <iostream>

int main() {
    int a = 10, b = 20, c = 30;
    std::cout << "Before swapping: a = " << a << ", b = " << b << ", c = " << c << std::endl;

    // Схема 1: a -> c, b -> a, c -> b
    int temp = c;
    c = a;
    a = b;
    b = temp;
    std::cout << "After swapping using scheme 1: a = " << a << ", b = " << b << ", c = " << c << std::endl;

    // Схема 2: b -> a, c -> b, a -> c
    temp = a;
    a = b;
    b = c;
    c = temp;
    std::cout << "After swapping using scheme 2: a = " << a << ", b = " << b << ", c = " << c << std::endl;

    return 0;
}
